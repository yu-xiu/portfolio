---
import { CenterTitle, SkillTitle, SkillGrid, SubCenterTitle, SectionTitle} from "./UI";
import { BriefcaseIcon, RocketIcon, GraduationCapIcon, CodeIcon } from "lucide-preact";

const timeline = [
    {
        date: "2025 — Present",
        title: "AI Software Engineer",
        company: "Stealth Startup",
        location: "Bay Area, CA",
        icon: "rocket",
        bullets: [
            "Built NLP + RL prototypes; shipped full-stack demos",
        ],
        tags: ["NLP", "RL", "Full-stack"]
    },

    {
        date: "2023 — 2024",
        title: "System and Software Engineer",
        company: "NASA Ames",
        location: "Mountain View, CA",
        icon: "rocket",
        bullets: [
            "Simulink, Stateflow, and Matlab spacecraft models & testing",
        ],
        tags: ["Simulink", "MATLAB", "Stateflow"]
    },
    {
        date: "2023 — 2023",
        title: "Math Tutor",
        company: "Math Culture LLC",
        location: "Los Altos, CA",
        icon: "education",
        bullets: [
            "Teaching Math Kangaroo competition mathlete class at Santa Rita elementary school.",
        ],
        tags: ["Algebra"]
    },
    {
        date: "2017 — 2018",
        title: "Math Tutor",
        company: "Foothill College",
        location: "Los Altos, CA",
        icon: "education",
        bullets: [
            "Provided individualized Calculus tutoring to college students.", 
            "Offered personalized feedback and guidance.", 
            "Successfully helped students improve their performance.", 
            "Resulting in enhanced understanding and mastery of Calculus concepts."
        ],
        tags: ["Algebra", "Trignometry", "Calculus"]
    },
];

const getIcon = (type: string) => {
    switch(type) {
        case "rocket": return RocketIcon;
        case "education": return GraduationCapIcon;
        case "code": return CodeIcon;
        default: return BriefcaseIcon;
    }
};
---

<section id="experience" class="w-full px-6 py-12 lg:py-16 bg-background">
  <SectionTitle
    title="Work Experience"
    color="secondary"
    className="flex flex-col justify-center"
  >
  
    <div class="flex_center flex-col w-full h-full py-10 gap-8">
        <!-- timeline -->
        <div class="w-full lg:w-[70%] relative">
            <!-- 轴线 -->
            <div class="absolute left-[1.1rem] md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary via-secondary to-primary/30"></div>

            <div class="space-y-12">
                {timeline.map((item, index) => {
                    const IconComponent = getIcon(item.icon);
                    const isEven = index % 2 === 0;
                    return (
                        <div class={`Fade_Up relative flex flex-col md:flex-row ${isEven ? 'md:flex-row' : 'md:flex-row-reverse'} items-start md:items-center gap-4 md:gap-8`}>
                            
                            <!-- 时间线圆点 -->
                            <div class="absolute left-0 md:left-1/2 md:-translate-x-1/2 z-10">
                                <div class="w-9 h-9 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center shadow-lg shadow-primary/30 ring-4 ring-background">
                                    <IconComponent size={18} class="text-white" />
                                </div>
                            </div>

                            <!-- 日期 (桌面端显示在对应一侧) -->
                            <div class={`hidden md:block w-[calc(50%-2rem)] ${isEven ? 'text-right pr-8' : 'text-left pl-8'}`}>
                                <time class="font-mono text-sm text-primary font-semibold">{item.date}</time>
                            </div>

                            <!-- 内容卡片 -->
                            <div class={`ml-12 md:ml-0 w-full md:w-[calc(50%-2rem)] ${isEven ? 'md:pl-8' : 'md:pr-8'}`}>
                                <div class="experience-card group p-5 rounded-xl bg-skillGradientAlt border border-primaryLiteAlt/30 hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10">
                                    
                                    <!-- 移动端日期 -->
                                    <time class="md:hidden font-mono text-xs text-primary font-semibold">{item.date}</time>
                                    
                                    <h3 class="text-lg font-bold mt-1 md:mt-0 group-hover:text-primary transition-colors">
                                        {item.title}
                                    </h3>
                                    <p class="text-primary font-medium">{item.company}</p>
                                    <p class="text-sm opacity-60 flex items-center gap-1">
                                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                        </svg>
                                        {item.location}
                                    </p>

                                    <ul class="mt-3 space-y-1.5 text-sm opacity-80">
                                        {item.bullets.map((b) => (
                                            <li class="flex items-start gap-2">
                                                <span class="text-primary mt-1.5">▸</span>
                                                <span>{b}</span>
                                            </li>
                                        ))}
                                    </ul>

                                    {item.tags?.length && (
                                        <div class="mt-4 flex flex-wrap gap-2">
                                            {item.tags.map((t) => (
                                                <span class="px-3 py-1 text-xs font-medium rounded-full bg-primary/20 text-primary border border-primary/30 hover:bg-primary/30 transition-colors">
                                                    {t}
                                                </span>
                                            ))}
                                        </div>
                                    )}
                                </div>
                            </div>
                        </div>
                    );
                })}
            </div>
        </div>
    </div>
  </SectionTitle>
</section>

<style>
    .experience-card {
        backdrop-filter: blur(10px);
    }
    
    @media (min-width: 768px) {
        .experience-card:hover {
            transform: translateY(-4px);
        }
    }
</style>
